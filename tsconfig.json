{
  "compilerOptions": {
    "lib": ["es2016"],
    "baseUrl": "./src",
    "outDir": "./build",
    "target": "es2016",
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noImplicitAny": true
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
